{
    "extends": [
        "@commitlint/config-conventional"
    ],
    "rules": {
        "subject-case": [
            2,
            "always",
            "lower-case"
        ],
        "type-empty": [
            2,
            "never"
        ],
        "subject-empty": [
            2,
            "never"
        ],
        "header-max-length": [
            2,
            "always",
            72
        ]
    }
}
